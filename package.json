{
  "name": "classcaps",
  "version": "0.1.0",
  "description": "Class driven component framework",
  "main": "classcaps.js",
  "unpkg": "dist/classcaps.min.js",
  "scripts": {
    "clean": "rimraf coverage dist/*",
    "lint": "standard",
    "flow": "flow",
    "test": "karma start karma.conf.js",
    "all": "npm run lint && npm run flow && npm run test",
    "test-firefox": "karma start karma.conf.js --browsers Firefox",
    "codecov": "codecov",
    "dist:cjs": "rollup -c -f cjs -- src/index.js | babel --presets es2015 > classcaps.js",
    "dist:browser": "rollup -c -f iife -n cc -- src/index.js | babel --presets es2015 | tee dist/classcaps.js | uglifyjs - -m -c > dist/classcaps.min.js",
    "dist:jq-cjs": "rollup -c -f iife -- src/cc-jquery.js | babel --presets es2015 > jquery.js",
    "dist:jq-browser": "rollup -c -f iife -- src/cc-jquery.js | babel --presets es2015 | tee dist/classcaps-jquery.js | uglifyjs - -m -c > dist/classcaps-jquery.min.js",
    "size": "npm run dist:browser && cat dist/classcaps.min.js | gzip | wc -c",
    "prepublish": "npm run clean && npm run dist:cjs && npm run dist:browser && npm run dist:jq-cjs && npm run dist:jq-browser"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/kt3k/classcaps.git"
  },
  "keywords": [
    "dom",
    "element",
    "coelement",
    "classcaps",
    "class-component",
    "MVC",
    "MVP",
    "PAC",
    "frontend",
    "UI",
    "framework"
  ],
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kt3k/classcaps/issues"
  },
  "homepage": "https://github.com/kt3k/classcaps",
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-espower": "^2.2.0",
    "babel-plugin-istanbul": "^2.0.0",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-power-assert": "^1.0.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "dom-gen": "^2.3.0",
    "eslint-plugin-flowtype": "^2.20.0",
    "flow-bin": "^0.34.0",
    "jquery": "^3.0.0",
    "karma": "^1.1.1",
    "karma-browserify": "^5.0.4",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.1.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.0.1",
    "mocha": "^3.0.0",
    "power-assert": "^1.4.1",
    "rimraf": "^2.5.2",
    "rollup": "0.41.1",
    "rollup-plugin-flow": "^1.0.1",
    "standard": "^8.2.0",
    "uglify-js": "^2.6.1",
    "watchify": "^3.7.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-flow-strip-types"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "env": [
      "browser",
      "jquery",
      "mocha"
    ],
    "ignore": [
      "/dist",
      "jquery.js",
      "classcaps.js"
    ]
  }
}
