{
  "name": "capsid",
  "version": "1.7.0",
  "description": "Component-based DOM programming",
  "main": "index.js",
  "unpkg": "dist/capsid.min.js",
  "types": "./types",
  "files": [
    "dist",
    "types",
    "index.js",
    "outside",
    "debug"
  ],
  "scripts": {
    "clean": "rimraf coverage dist types",
    "fix": "prettier --write --no-semi --single-quote *.js 'src/**/*.ts'",
    "typecheck": "tsc --noEmit -p .",
    "types": "tsc --declaration --emitDeclarationOnly --declarationDir ./types -p .",
    "karma": "karma start",
    "test": "run-s typecheck karma",
    "test-firefox": "karma start --browsers Firefox",
    "codecov": "codecov",
    "dist": "gulp dist",
    "size": "gulp browser && gzip-size dist/capsid.min.js",
    "prepublish": "npm run clean && npm run dist && npm run types",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/capsidjs/capsid.git"
  },
  "keywords": [
    "dom",
    "element",
    "capsid",
    "mvc",
    "frontend framework",
    "ui framework"
  ],
  "author": "Yoshiya Hinosawa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/capsidjs/capsid/issues"
  },
  "homepage": "https://github.com/capsidjs/capsid",
  "devDependencies": {
    "@types/mocha": "^7.0.0",
    "@types/node": "^13.1.0",
    "codecov": "^3.0.0",
    "genel": "^1.1.1",
    "gulp": "^4.0.0",
    "gulp-if": "^3.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-terser": "^1.1.5",
    "gzip-size-cli": "^3.0.0",
    "husky": "^4.0.2",
    "karma": "^4.0.1",
    "karma-chrome-launcher": "^3.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.0.1",
    "karma-typescript": "^5.0.0",
    "lint-staged": "^10.0.3",
    "merge-stream": "^2.0.0",
    "mocha": "^7.0.1",
    "npm-run-all": "^4.1.2",
    "power-assert": "^1.4.1",
    "prettier": "^1.9.2",
    "rimraf": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-typescript": "^1.0.0",
    "rollup-stream": "^1.18.0",
    "testdouble": "^3.9.1",
    "typescript": "^3.8.3",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write --no-semi --single-quote"
    ]
  }
}
