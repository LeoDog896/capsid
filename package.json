{
  "name": "capsid",
  "version": "0.28.2",
  "description": "Component-based DOM programming",
  "main": "index.js",
  "unpkg": "dist/capsid.min.js",
  "files": [
    "dist",
    "outside-events.js",
    "debug.js"
  ],
  "scripts": {
    "clean": "rimraf coverage dist/*.js",
    "lint": "standard",
    "fix": "prettier --write --no-semi --single-quote *.js 'src/**/*.js' && standard --fix",
    "type": "tsc --noEmit -p .",
    "karma": "karma start",
    "test": "run-s lint type karma",
    "test-firefox": "karma start --browsers Firefox",
    "codecov": "codecov",
    "dist": "gulp dist",
    "size": "gulp browser && gzip-size dist/capsid.min.js",
    "prepublish": "npm run clean && npm run dist",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/capsidjs/capsid.git"
  },
  "keywords": [
    "dom",
    "element",
    "coelement",
    "capsid",
    "class-component",
    "MVC",
    "MVP",
    "PAC",
    "frontend",
    "UI",
    "framework"
  ],
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/capsidjs/capsid/issues"
  },
  "homepage": "https://github.com/capsidjs/capsid",
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.1.6",
    "@babel/plugin-transform-typescript": "^7.1.0",
    "@babel/preset-env": "^7.0.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.10",
    "babel-eslint": "^10.0.1",
    "babel-plugin-espower": "^3.0.0",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-preset-power-assert": "^3.0.0-beta.1",
    "babelify": "^10.0.0",
    "browserify": "^16.0.0",
    "codecov": "^3.0.0",
    "genel": "^1.1.1",
    "gulp": "^3.9.1",
    "gulp-if": "^2.0.2",
    "gulp-rename": "^1.2.2",
    "gulp-terser": "^1.1.5",
    "gzip-size-cli": "^3.0.0",
    "husky": "^1.1.4",
    "karma": "^3.0.0",
    "karma-browserify": "^5.2.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.0.1",
    "karma-rollup-preprocessor": "^6.1.1",
    "lint-staged": "^8.0.5",
    "merge-stream": "^1.0.1",
    "mocha": "^5.0.0",
    "npm-run-all": "^4.1.2",
    "power-assert": "^1.4.1",
    "prettier": "^1.9.2",
    "rimraf": "^2.5.2",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-typescript": "^1.0.0",
    "rollup-stream": "^1.18.0",
    "standard": "^12.0.0",
    "testdouble": "^3.9.1",
    "typescript": "^3.2.1",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "watchify": "^3.7.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ],
    "plugins": [
      "@babel/plugin-transform-typescript"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "env": [
      "browser",
      "mocha"
    ],
    "ignore": [
      "/dist",
      "/website"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write --no-semi --single-quote",
      "standard --fix",
      "git add"
    ]
  }
}
